{
  "compilerOptions": {
    "target": "es2016",

    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"],
      "@utils/*": ["src/utils/*"],
      "@models/*": ["src/models/*"],
      "@controllers/*": ["src/controllers/*"],
      "@services/*": ["src/services/*"],
      "@config/*": ["src/config/*"],
      "@routes/*": ["src/routes/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@types/*": ["src/types/*"],
      "@logger/*": ["src/log/*"],
      "@helpers/*": ["src/helpers/*"],
      "@enums/*": ["src/enums/*"],
      "@token/*": ["src/token/*"],
      "@messages/*": ["src/messages/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
